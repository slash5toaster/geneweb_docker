Bootstrap: docker
From: debian:stable-slim
Stage: spython-base

###############################################################################
%files
opt/geneweb/startup.sh ${GW_ROOT}
opt/geneweb/bashrc ${GW_ROOT}/.bashrc

###############################################################################
%labels
MAINTAINER="slash5toaster@gmail.com"
PROJECT=geneweb
NAME=geneweb
VERSION=7.0.0

###############################################################################
%post
GW_VER=7.0.0
GW_PR=48a588f8
GW_USER=geneweb
GW_GROUP=geneweb
GW_UID=115
GW_GID=115
GW_ROOT=/opt/geneweb
GWD_PORT=2317
GWSETUP_PORT=2316

# Add geneweb user
groupadd ${GW_GROUP} \
          -g ${GW_GID}

useradd ${GW_USER} \
        -u ${GW_UID} \
        -g ${GW_GROUP} \
        -m -d ${GW_ROOT} \
        -s /bin/bash

pwck -s
grpck -s

# Update OS to apply latest vulnerability fix
apt-get update && \
apt-get install -y \
        bubblewrap \
        build-essential \
        curl \
        gcc \
        git \
        libcurl4-gnutls-dev \
        libgmp-dev \
        libipc-system-simple-perl \
        libstring-shellquote-perl \
        m4 \
        opam \
        vim

# make geneweb
opam init -c 4.12.1

eval $(opam env)

opam install -y \
     calendars \
     camlp5 \
     cppo \
     dune \
     jingoo \
     markup \
     ppx_blob \
     ppx_deriving \
     ppx_import \
     stdlib-shims \
     syslog \
     unidecode.0.2.0 \
     uucp \
     uutf \
     uunf

cd /tmp/
git clone \
    --depth=1 \
    --no-single-branch \
    https://github.com/geneweb/geneweb
cd geneweb/
git checkout Geneweb-$GW_PR

ocaml ./configure.ml --sosa-legacy --gwdb-legacy --release
make distrib

chown -cR ${GW_USER}.${GW_GROUP} ${GW_ROOT}

su - ${GW_USER}
cd ${GW_ROOT}

###############################################################################
%environment
export GW_VER=7.0.0
export GW_PR=48a588f8
export GW_USER=geneweb
export GW_GROUP=geneweb
export GW_UID=115
export GW_GID=115
export GW_ROOT=/opt/geneweb
export GWD_PORT=2317
export GWSETUP_PORT=2316

###############################################################################
%runscript
cd ${GW_ROOT}
#/opt/geneweb/startup.sh "$@"

###############################################################################
%startscript
cd ${GW_ROOT}
/opt/geneweb/gwd -help

###############################################################################
%test
# curl -s --fail http://localhost:2317 -o /dev/null
# /opt/geneweb/startup.sh help
